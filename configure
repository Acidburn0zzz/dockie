#!/bin/sh

echo "Do you want to use:"
echo "1) LXC image server"
echo "2) Docker Hub"
printf '[1] ' && read -r HUB

case "$HUB" in
1 | "") HUB=lxc ;;
2) HUB=docker ;;
*) echo invalid option && exit 1 ;;
esac

echo
echo "Do you want to use:"
echo "1) proot"
echo "2) fakechroot"
printf '[1] ' && read -r CHROOT

case "$CHROOT" in
1 | "") CHROOT=proot ;;
2) CHROOT=fakechroot ;;
*) echo invalid option && exit 1 ;;
esac

rm -f get.sh exec.sh
ln -s get-"$HUB".sh get.sh
ln -s exec-"$CHROOT".sh exec.sh
