#!/bin/sh

set -eu

printf "Images source? (lxc, docker) [lxc] "
read -r HUB

case "$HUB" in
docker)
	sed -i 's/get-.*.sh/get-docker.sh/g' Makefile 
	sed -i 's/@# cp con/@cp con/g' Makefile
	;;
lxc | "" )
	sed -i 's/get-.*.sh/get-lxc.sh/g' Makefile 
	sed -i 's/@cp con/@# cp con/g' Makefile
	;;
*) echo invalid option >&2 && exit 1 ;;
esac
